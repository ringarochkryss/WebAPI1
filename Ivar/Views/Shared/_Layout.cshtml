<!DOCTYPE html>
<html class="Backgroundlayout">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/Ajax")
    @Scripts.Render("~/bundles/DataTables")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/Jquery-ui")
    @Scripts.Render("~/bundles/Chosen")
    @Scripts.Render("~/bundles/Bookscript")

</head>
<body>
    <div class="navbar navbar-fixed-top navbar-light" style="background-color: #e3f2fd;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Books", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Petra Mellbrand</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/DataTables")
    @Scripts.Render("~/bundles/Bookscript")


    @RenderSection("scripts", required: false)
</body>
</html>
